<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juan.petagram3week">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Petagram3Week"
    >
        <activity android:name=".ActivityContacto"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ActivityAbout"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".Mascotas_Favoritas"
            android:parentActivityName=".MainActivity">

            <!-- >soporte para versiones antriores de android< -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>