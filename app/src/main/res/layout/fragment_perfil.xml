<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.fragmentPerfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgPerfil"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/pet5"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="5dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#3f51b5"
            android:layout_centerHorizontal="true"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvNombreP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombreP"
            android:layout_below="@id/imgPerfil"
            android:gravity="center"
            android:textSize="34dp"
            android:textStyle="bold"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPerfilM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_below="@id/tvNombreP"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</FrameLayout>